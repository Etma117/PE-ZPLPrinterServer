# URL base de tu backend POS
BACKEND_URL=https://gavenida-backend.obsidian-sec.com

# Usuario del sistema (tabla Usuarios) con permisos de impresion
# Debe tener la ruta /sistema/impresoras-termicas en su Puesto o __ALL__
PRINT_USER=impresion@obsidian-sec.com
PRINT_PASSWORD=toor

# Polling
POLL_INTERVAL_SECONDS=5
FETCH_LIMIT=25
REQUEST_TIMEOUT_SECONDS=20

# Backend de impresion
# Valores: file | lp | command
PRINT_BACKEND=command

# Si PRINT_BACKEND=lp (CUPS/Linux/macOS)
PRINTER_NAME=

# Si PRINT_BACKEND=command
# Ejemplo Linux: lp -d Epson_TMT20
# Ejemplo Windows (PowerShell): powershell -File C:\\scripts\\print.ps1
PRINT_COMMAND=python3 -c "import sys,socket; data=sys.stdin.buffer.read(); s=socket.create_connection(('192.168.1.70',9100),timeout=10); s.sendall(data); s.close()"



OUTPUT_DIR=./outbox
# Para impresora t√©rmica de tickets (Epson, RIBETEC POS)
#RENDER_MODE=escpos

# Para impresora de etiquetas ZPL (Zebra, RIBETEC label)
RENDER_MODE=zpl


# Debug opcional
LOG_JSON_PAYLOAD=false
